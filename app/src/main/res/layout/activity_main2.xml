<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_weight="120"
        android:background="#739879"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#EFEBEB"
            android:gravity="center"
            android:text="Bienvenid@"
            android:textColor="#0C0C0C"
            android:textColorHint="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Nom_Cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/imc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/border_top"
            android:hint="IMC"
            android:padding="15dp" />

        <Button
            android:id="@+id/btnimc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/purple_500"
            android:text="IMC"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/envejecer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:hint="Envejecer"
            android:padding="15dp" />

        <Button
            android:id="@+id/btnEnvejecer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/purple_500"
            android:text="Envejecer"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tributario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:hint="Valor a tributar"
            android:padding="15dp"
            tools:text="Valor a prestar" />

        <Button
            android:id="@+id/btnprestamo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/purple_500"
            android:text="Calcular"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:hint="Regresar"
            android:maxWidth="100dp"
            android:minWidth="10dp"
            android:onClick="regresar"
            android:text="Regresar"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>