<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="657dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_orange_light"
            android:hint="Id Usuario"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#3949AB" />

        <EditText
            android:id="@+id/titulo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#0E2DCA"
            android:hint="Titulo"
            android:minHeight="48dp"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/cuerpo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#EA2727"
            android:hint="Cuerpo"
            android:minHeight="48dp"
            android:textColorHint="#000000" />

        <Button
            android:id="@+id/btn_leer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="#72C32D"
            android:backgroundTint="#3CCC4A"
            android:backgroundTintMode="add"
            android:foregroundTint="#78E153"
            android:text="Leer"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/btn_enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#72C32D"
            android:backgroundTint="#3CCC4A"
            android:backgroundTintMode="add"
            android:foregroundTint="#78E153"
            android:text="Enviar"
            android:textColor="#F8F8F8"
            android:textColorHint="#FFFFFF"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/btn_actualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#72C32D"
            android:backgroundTint="#3CCC4A"
            android:backgroundTintMode="add"
            android:foregroundTint="#78E153"
            android:text="Actualizar"
            android:textColor="#F8F8F8"
            android:textColorHint="#FFFFFF"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/btn_eliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#72C32D"
            android:backgroundTint="#3CCC4A"
            android:backgroundTintMode="add"
            android:foregroundTint="#78E153"
            android:text="Eliminar"
            android:textColor="#F8F8F8"
            android:textColorHint="#FFFFFF"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>